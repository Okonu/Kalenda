{
  "name": "weekly-calendar",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "watch-client": "cd client && npm start",
    "watch-server": "nodemon --ignore \"client/\" index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cd client && npm run build",
    "install": "cd client && npm install",
    "heroku-postbuild": "npm run build",
    "sass": "cd client/src/assets && sass.bat index.scss ./css-output/output.css && cd ../../..",
    "watch-sass": "sass.bat --watch client/src/assets/index.scss client/src/assets/css-output/output.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Koldenblue/weekly-calendar.git"
  },
  "author": "Kevin Miller",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Koldenblue/weekly-calendar/issues"
  },
  "homepage": "https://github.com/Koldenblue/weekly-calendar#readme",
  "dependencies": {
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.10.7",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
